@model E_Learning.Models.Course.AddCourseCategory

@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Page Wrapper -->
<div class="page-wrapper">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-sm-12">
                    <div class="page-sub-header">
                        <h3 class="page-title">Add Course</h3>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Courses</a></li>
                            <li class="breadcrumb-item active">Add Courses</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row">
            <div class="col-sm-12">
                <div class="card comman-shadow">
                    <div class="card-body">
                        <form asp-action="AddCourse" method="post" asp-controller="Admin">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="form-title student-info">Course Details <span><a href="javascript:;"><i class="feather-more-vertical"></i></a></span></h5>
                                </div>
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="CourseName">Course Name <span class="login-danger">*</span></label>
                                        <input asp-for="CourseName" class="form-control" type="text" placeholder="Enter Course Name">
                                    </div>
                                </div>
                                <br />
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="InstructorName">Instructor Name <span class="login-danger">*</span></label>
                                        <input asp-for="InstructorName" class="form-control" type="text" placeholder="Enter Instructor Name">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="Thumbnail">Course Thumbnail <span class="login-danger">*</span></label>
                                        <input asp-for="Thumbnail" class="form-control" type="text" placeholder="Enter Course Thumbnail URL">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="CourseDescription">Enter Description <span class="login-danger">*</span></label>
                                        <textarea asp-for="CourseDescription" class="form-control" type="" placeholder="Enter Description"></textarea>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="Price">Enter Price <span class="login-danger">*</span></label>
                                        <input asp-for="Price" class="form-control" type="text" placeholder="Enter Price">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="Duration">Valid For (In Days) <span class="login-danger">*</span></label>
                                        <input asp-for="Duration" class="form-control" type="text" placeholder="Enter Time Period (In Days)">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="Tag">Enter Tags <span class="login-danger">*</span></label>
                                        <input asp-for="Tag" class="form-control" type="text" placeholder="Enter Tags">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group w-50 local-forms">
                                        <label asp-for="Level">Level <span class="login-danger">*</span></label>
                                        <select asp-for="Level" class="form-control select">
                                            <option>Select Level</option>
                                            <option>Beginner</option>
                                            <option>Intermediate</option>
                                            <option>Hard</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="student-submit">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Wrapper -->

<script>
    document.addEventListener('DOMContentLoaded', function () {
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: '@TempData["SuccessMessage"]'
                });
        </text>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@TempData["ErrorMessage"]'
                });
        </text>
    }
        });
</script>
