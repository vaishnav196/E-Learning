@model List<string>

@{
    ViewData["Title"] = "Course Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center my-4">Course Management</h2>
<div class="page-wrapper">
    <div class="content container-fluid">
        <ul class="list-group">
            @foreach (var course in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@course</span>
                    <form asp-action="GetSubCourseBYCorurse" method="get" class="d-inline">
                        <input type="hidden" name="CourseName" value="@course" />
                        <button type="submit" class="btn btn-primary btn-sm">View Sub-Courses</button>
                    </form>
                </li>
            }
        </ul>
    </div>
</div>

<!-- Optional: Adding some custom styles for better UI -->
<style>
    .page-wrapper {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #dee2e6;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
